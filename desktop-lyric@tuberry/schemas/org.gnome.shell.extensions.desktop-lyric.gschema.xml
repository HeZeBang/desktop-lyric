<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.desktop-lyric" path="/org/gnome/shell/extensions/desktop-lyric/">
    <key type="b" name="enable-systray">
        <default>false</default>
        <summary>enable systray</summary>
    </key>
    <key type="b" name="draggable">
        <default>false</default>
        <summary>lyric is draggable or not</summary>
    </key>
    <key type="i" name="xpos">
        <default>0</default>
        <summary>lyric x position</summary>
    </key>
    <key type="i" name="ypos">
        <default>50</default>
        <summary>lyric y position</summary>
    </key>
    <key type="u" name="lyric-orientation">
        <range min="0" max="1"/>
        <default>0</default>
        <summary>lyric orientation (0 - horizontal, 1 - vertical)</summary>
    </key>
    <key type="u" name="refresh-interval">
        <range min="50" max="500"/>
        <default>60</default>
        <summary>lyric refresh interval (ms)</summary>
    </key>
    <key type="s" name="lyric-location">
        <default>""</default>
        <summary>location for saving and reading lyrics</summary>
    </key>
    <key type="s" name="font-name">
        <default>"Sans 40"</default>
        <summary>font of text</summary>
    </key>
    <key type="s" name="active-color">
        <default>"rgba(100, 50, 150, 0.5)"</default>
        <summary>active lyric color</summary>
    </key>
    <key type="s" name="inactive-color">
        <default>"rgba(230, 230, 230, 0.5)"</default>
        <summary>inactive lyric color</summary>
    </key>
    <key type="s" name="outline-color">
        <default>"rgba(0, 0, 0, 0.2)"</default>
        <summary>lyric outline color</summary>
    </key>
  </schema>
</schemalist>
